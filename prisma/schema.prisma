// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  emailVerified DateTime?
  password      String?
  nickname      String
  profileImageUrl String? @map("profile_image_url")
  bio           String?
  level         Int      @default(1)
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  accounts         Account[]
  sessions         Session[]
  createdGroups    Group[]           @relation("GroupCreator")
  groupMemberships GroupMember[]
  posts            Post[]
  comments         Comment[]
  reports          Report[]
  badges           UserBadge[]
  plants           UserPlant[]
  communityPosts   CommunityPost[]
  communityComments CommunityComment[]
  communityLikes   CommunityPostLike[]

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

enum ApprovalMode {
  AUTO
  MANUAL
}

model Group {
  id            String        @id @default(cuid())
  creatorId     String        @map("creator_id")
  name          String
  description   String
  topic         String
  imageUrl      String?       @map("image_url")
  durationWeeks Int          @map("duration_weeks")
  maxMembers    Int           @map("max_members")
  approvalMode  ApprovalMode  @default(AUTO) @map("approval_mode")
  startDate     DateTime      @map("start_date")
  endDate       DateTime      @map("end_date")
  isActive      Boolean       @default(true) @map("is_active")
  createdAt     DateTime      @default(now()) @map("created_at")
  updatedAt     DateTime      @updatedAt @map("updated_at")

  creator       User          @relation("GroupCreator", fields: [creatorId], references: [id])
  members       GroupMember[]
  posts         Post[]

  @@map("groups")
}

enum MemberStatus {
  ACTIVE
  PENDING
  LEFT
  REMOVED
}

model GroupMember {
  id             String       @id @default(cuid())
  groupId        String       @map("group_id")
  userId         String       @map("user_id")
  status         MemberStatus @default(ACTIVE)
  joinedAt       DateTime     @default(now()) @map("joined_at")
  leftAt         DateTime?    @map("left_at")
  attendanceCount Int         @default(0) @map("attendance_count")
  allClear       Boolean      @default(false) @map("all_clear")
  createdAt      DateTime     @default(now()) @map("created_at")
  updatedAt      DateTime     @updatedAt @map("updated_at")

  group          Group        @relation(fields: [groupId], references: [id])
  user           User         @relation(fields: [userId], references: [id])
  attendances    Attendance[]

  @@unique([groupId, userId])
  @@map("group_members")
}

model Post {
  id           String   @id @default(cuid())
  groupId      String   @map("group_id")
  authorId     String   @map("author_id")
  content      String?
  postedAt     DateTime @default(now()) @map("posted_at")
  commentCount Int      @default(0) @map("comment_count")
  isDeleted    Boolean  @default(false) @map("is_deleted")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  group        Group        @relation(fields: [groupId], references: [id])
  author       User         @relation(fields: [authorId], references: [id])
  images       PostImage[]
  comments     Comment[]

  @@index([groupId, postedAt])
  @@map("posts")
}

model PostImage {
  id        String   @id @default(cuid())
  postId   String   @map("post_id")
  imageUrl String   @map("image_url")
  order    Int
  createdAt DateTime @default(now()) @map("created_at")

  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@map("post_images")
}

model Comment {
  id        String   @id @default(cuid())
  postId   String   @map("post_id")
  authorId String   @map("author_id")
  content   String
  createdAt DateTime @default(now()) @map("created_at")
  isDeleted Boolean  @default(false) @map("is_deleted")

  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  author    User     @relation(fields: [authorId], references: [id])

  @@map("comments")
}

model Attendance {
  id             String   @id @default(cuid())
  groupMemberId String   @map("group_member_id")
  date           DateTime @db.Date
  isPresent      Boolean  @default(false) @map("is_present")
  createdAt      DateTime @default(now()) @map("created_at")

  groupMember    GroupMember @relation(fields: [groupMemberId], references: [id], onDelete: Cascade)

  @@unique([groupMemberId, date])
  @@index([groupMemberId])
  @@map("attendances")
}

enum ReportTarget {
  GROUP
  POST
  USER
}

enum ReportReason {
  IRRELEVANT_CONTENT
  HARMFUL_IMAGE
  SPAM
  INAPPROPRIATE_BEHAVIOR
  OTHER
}

enum ReportStatus {
  PENDING
  APPROVED
  REJECTED
  RESOLVED
}

model Report {
  id          String       @id @default(cuid())
  reporterId  String       @map("reporter_id")
  targetType  ReportTarget @map("target_type")
  targetId    String       @map("target_id")
  reason      ReportReason
  description String?
  status      ReportStatus @default(PENDING)
  createdAt   DateTime     @default(now()) @map("created_at")
  reviewedAt  DateTime?    @map("reviewed_at")

  reporter    User         @relation(fields: [reporterId], references: [id])

  @@index([status, createdAt])
  @@index([targetType, targetId])
  @@map("reports")
}

model Badge {
  id          String   @id @default(cuid())
  name        String
  description String?
  iconUrl     String?  @map("icon_url")
  category    String?
  createdAt   DateTime @default(now()) @map("created_at")

  userBadges  UserBadge[]

  @@map("badges")
}

model UserBadge {
  id        String   @id @default(cuid())
  userId   String   @map("user_id")
  badgeId  String   @map("badge_id")
  earnedAt DateTime @default(now()) @map("earned_at")

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  badge     Badge    @relation(fields: [badgeId], references: [id], onDelete: Cascade)

  @@unique([userId, badgeId])
  @@map("user_badges")
}

model Plant {
  id          String   @id @default(cuid())
  name        String
  description String?
  imageUrl    String?  @map("image_url")
  createdAt   DateTime @default(now()) @map("created_at")

  userPlants  UserPlant[]

  @@map("plants")
}

model UserPlant {
  id             String   @id @default(cuid())
  userId         String   @map("user_id")
  plantId        String   @map("plant_id")
  growthLevel    Int      @default(0) @map("growth_level")
  growthProgress Int      @default(0) @map("growth_progress")
  consecutiveDays Int     @default(0) @map("consecutive_days")
  lastWateredAt  DateTime? @map("last_watered_at")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  plant          Plant    @relation(fields: [plantId], references: [id], onDelete: Cascade)

  @@unique([userId, plantId])
  @@map("user_plants")
}

model CommunityPost {
  id          String   @id @default(cuid())
  authorId   String   @map("author_id")
  content     String
  imageUrl    String?  @map("image_url")
  likeCount   Int      @default(0) @map("like_count")
  commentCount Int     @default(0) @map("comment_count")
  createdAt   DateTime @default(now()) @map("created_at")
  isDeleted   Boolean  @default(false) @map("is_deleted")

  author      User     @relation(fields: [authorId], references: [id])
  comments    CommunityComment[]
  likes       CommunityPostLike[]

  @@map("community_posts")
}

model CommunityComment {
  id        String   @id @default(cuid())
  postId   String   @map("post_id")
  authorId String   @map("author_id")
  content   String
  createdAt DateTime @default(now()) @map("created_at")
  isDeleted Boolean  @default(false) @map("is_deleted")

  post      CommunityPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  author    User          @relation(fields: [authorId], references: [id])

  @@map("community_comments")
}

model CommunityPostLike {
  id        String   @id @default(cuid())
  postId   String   @map("post_id")
  userId   String   @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")

  post      CommunityPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([postId, userId])
  @@map("community_post_likes")
}
